<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_id"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="30dp"
    android:padding="30dp"
    tools:context=".activities.login"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"

        android:textSize="40sp"

        />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protect your device with SpotOn"
        android:textSize="17sp"
    />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="+91"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fiels_shape"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            android:maxLength="10"
            android:digits="0123456789"
            android:inputType="phone" />
        <EditText
            android:id="@+id/phone_number_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone Number/Username"
            android:padding="15dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/fiels_shape"
            android:maxLength="10"
            android:digits="0123456789"
            android:inputType="phone" />
    </LinearLayout>



    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"

        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/fiels_shape"
         />



    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:background="@drawable/custom_btn"
        android:text="@string/btn_login"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/errormessage_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/movetoregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Don't have an account?Click here" />


</LinearLayout>